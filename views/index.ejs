<!DOCTYPE html>
<html>
  <head>
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <meta name="format-detection" content="telephone=no">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <div class="wrapper">
          <% if (typeof user !== 'undefined') { %>      
          <form action="/" method="post" class="board-form">
          デバイスID：<input type="text" name="deviceId" class="input" required<br>
              <br>
              <button type="submit" class="submit">デバイスID登録</button>
          </form>
          
          <ul class="main-list">
              <% deviceList.forEach(function(deviceItem){ %>
                 <li class="main-List__item">
                   <a href="/register/<%= deviceItem.deviceId %>" class="board">
                       <p class="device_id"><%= deviceItem.deviceId %></p>
                       <p class="device_date"><%= deviceItem.created_at %></p>
                   </a>
                 </li>
              <% }); %>
          </ul>
             <span class="login-user"><%= user.email %>さんとしてログインしています</span>
          <% } %>
      </div>
  </body>
</html>
